<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Knowledge-Learning{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/Favicon.jpg') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/header.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/flash.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/footer.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/formations.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/theme.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/cursus.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/lesson.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/certification.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/panier.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/payment.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/adminUser.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/adminFormations.css') }}">

        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    {% include '_partials/header.html.twig'%}

    {% include '_partials/_flash.html.twig'%}

    <body>
        <main>
            {% if app.user %}
                <div class="user-info-bar">
                    Connecté en tant que {{ app.user.name }}
                    <a href="{{ path('app_logout')}}" class="link-logout">Se déconnecter</a>
                </div>
            {% endif %}
            {% block body %}{% endblock %}
        </main>
    </body>

    {% include '_partials/footer.html.twig'%}

</html>
