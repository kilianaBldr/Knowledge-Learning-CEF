{% extends 'base.html.twig' %}

{% block title %}Leçon{% endblock %}

{% block body %}
    <div class="lesson-container">
        <h1>{{ lesson.name }}</h1>
        <p>{{ lesson.description }}</p>

        <video width="500" controls>
            <source src="{{ asset(lesson.videoFile) }}" type="video/mp4">
            Votre navigateur ne supporte pas la vidéo.
        </video>

        <div class="lesson-content">
            <p>{{ lesson.content|nl2br }}</p>
        </div>

        <div class="lesson-actions">
            <form action="{{ path('app_lesson_validate', {'id': lesson.id}) }}" method="POST">
                <button type="submit" class="btn">Valider cette leçon</button>
            </form>
        </div>

        <a href="{{ path('app_cursus_show', {'id': lesson.cursus.id}) }}" class="btn">← Retour au cursus</a>
    </div>
{% endblock %}
