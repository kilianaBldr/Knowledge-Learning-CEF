{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="login-container">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="lougout-link">
            Connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1>Se connecter</h1>
    <form method="post">
        <label for="inputName">Nom d'utilisateur :</label>
        <input type="text" value="{{ last_username }}" name="name" id="inputName" autocomplete="username" required autofocus>

        <label for="inputPassword">Mot de passe :</label>
        <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

        <button class="btn" type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}
