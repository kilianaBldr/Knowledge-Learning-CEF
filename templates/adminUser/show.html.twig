{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.name }}{% endblock %}

{% block body %}
    <h1 class="admin-title">Modifier l'utilisateur</h1>

    <div class="user-profile">
        <table class="profile-table">
            <tbody>
                <tr>
                    <th>Identifiant</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>E-mail</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Compte Vérifié</th>
                    <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>Mis à jour</th>
                    <td>{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="action-buttons">
            <a href="{{ path('admin_user_index') }}" class="btn-userAdmin btn-back">Retour à la liste</a>
            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn-userAdmin btn-edit">Modifier</a>
            {{ include('adminUser/_delete_form.html.twig') }}
        </div>
    </div>
    

   

{% endblock %}
